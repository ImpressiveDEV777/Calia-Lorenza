{% render 'pages--quiz' with 
  step0: section.settings.step0,
  step1: section.settings.step1,
  step2: section.settings.step2,
  step3_1: section.settings.step3_1,
  step3_2: section.settings.step3_2,
  result: section.settings.result,
  collection1: section.settings.collection1,
  collection2: section.settings.collection2,
  collection3: section.settings.collection3,
  collection4: section.settings.collection4,
  collection5: section.settings.collection5
%}

{% schema %}
  {
    "name": "Quiz section",
    "settings": [
      {
        "type": "textarea",
        "id": "step0",
        "label": "Intro text",
        "default": "Find the collection that is suitable for your hair"
      },
      {
        "type": "textarea",
        "id": "step1",
        "label": "Step1 Question",
        "default": "Do you want healthy hair?"
      },
      {
        "type": "textarea",
        "id": "step2",
        "label": "Step2 Question",
        "default": "Are you new to natural hair care?"
      },
      {
        "type": "textarea",
        "id": "step3_1",
        "label": "Step3-1 Question",
        "default": "Do you prefer collections with or without fragrance?"
      },
      {
        "type": "textarea",
        "id": "step3_2",
        "label": "Step3-2 Question",
        "default": "Do you have dry hair & an itchy scalp, normal hair & scalp(not too oil or too dry), OR dry hair & an oily scalp?"
      },
      {
        "type": "textarea",
        "id": "result",
        "label": "Recommendation text",
        "default": "We think you'll enjoy these products"
      },
      {
        "type": "collection",
        "id": "collection1",
        "label": "Recommending collection1"
      },
      {
        "type": "collection",
        "id": "collection2",
        "label": "Recommending collection2"
      },
      {
        "type": "collection",
        "id": "collection3",
        "label": "Recommending collection3"
      },
      {
        "type": "collection",
        "id": "collection4",
        "label": "Recommending collection4"
      },
      {
        "type": "collection",
        "id": "collection5",
        "label": "Recommending collection5"
      }
    ]
  }
{% endschema %}