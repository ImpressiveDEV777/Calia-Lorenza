{% render 'pages--quiz' with 
  step1: section.settings.step1,
  step2: section.settings.step2,
  step3_1: section.settings.step3_1,
  step3_2: section.settings.step3_2,
  product1: section.settings.product1,
  product2: section.settings.product2,
  product3: section.settings.product3,
  product4: section.settings.product4,
  product5: section.settings.product5
